{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dinnr.example.com/aml_triage/contracts/screening_result.v1.json",
  "title": "ScreeningResult",
  "type": "object",
  "required": [
    "schema_version",
    "decision",
    "rule_codes",
    "corridor",
    "amount",
    "action_ids"
  ],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "decision": {
      "type": "string",
      "enum": ["PASS", "SUS", "FAIL"]
    },
    "rule_codes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "action_ids": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "analysis_report": {
      "type": "string",
      "minLength": 1
    },
    "corridor": {
      "type": "object",
      "required": [
        "origin_country",
        "destination_country",
        "channel",
        "currency"
      ],
      "additionalProperties": false,
      "properties": {
        "origin_country": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "destination_country": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        },
        "channel": {
          "type": "string",
          "minLength": 1
        },
        "currency": {
          "type": "string",
          "pattern": "^[A-Z]{3}$"
        }
      }
    },
    "amount": {
      "type": "number",
      "minimum": 0
    },
    "behavioural_patterns": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "evidence": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "id_hash"
        ],
        "additionalProperties": false,
        "properties": {
          "type": {
            "type": "string"
          },
          "id_hash": {
            "type": "string",
            "pattern": "^[A-Fa-f0-9]{16,64}$"
          },
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "summary": {
            "type": "string"
          }
        }
      }
    },
    "metadata": {
      "type": "object"
    }
  }
}
